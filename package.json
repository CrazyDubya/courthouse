{
  "name": "courthouse-simulator",
  "version": "1.0.0",
  "description": "LLM-powered mock courtroom simulator with 3D environment",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p src/server/tsconfig.json",
    "build:client": "vite build",
    "preview": "vite preview",
    "serve": "node dist/server/index.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "courtroom",
    "simulator",
    "llm",
    "three.js",
    "legal",
    "mock-trial"
  ],
  "author": "Courthouse Simulator Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "ws": "^8.14.2",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.32.6",
    "ffmpeg-static": "^5.2.0",
    "node-fetch": "^3.3.2",
    "crypto-js": "^4.2.0",
    "nanoid": "^5.0.4",
    "lodash": "^4.17.21",
    "three": "^0.158.0",
    "@types/three": "^0.158.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.10",
    "@types/multer": "^1.4.11",
    "@types/crypto-js": "^4.2.1",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "@vitejs/plugin-legacy": "^5.2.0",
    "terser": "^5.26.0"
  }
}